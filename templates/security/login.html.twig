{% block title %}Log in!{% endblock %}

{% block body %}
<div class="login-container">
    <form method="post" action="{{ path('app_login') }}" class="login-form">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        <h1 class="h3 mb-3 font-weight-normal">Veuillez vous connecter</h1>
        
        <div class="form-group">
            <label for="login">Login</label>
            <input type="text" value="{{ last_username }}" name="login" id="login" class="form-control" required autofocus>
        </div>
        
        <div class="form-group">
            <label for="motpasse">Mot de passe</label>
            <input type="password" name="motpasse" id="motpasse" class="form-control" required>
        </div>

        <div class="form-group">
            <label for="parametre">Paramètre</label>
            <select class="form-control form-control-lg" name="database_choice" id="database_choice" required>
                <option value="">-- Choisissez une base de données --</option>
                {% for db in parametres %}
                    <option value="{{ db.code }}">{{ db.code }}</option>
                {% endfor %}
            </select>
        </div>

        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

        <button class="btn btn-lg btn-primary" type="submit">
            Se connecter
        </button>
    </form>
</div>
{% endblock %}

<style>
    .login-container {
        background-color: #000;
        padding: 30px;
        border-radius: 8px;
        max-width: 400px;
        margin: auto;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    }

    .login-form {
        color: #fff;
    }

    .login-form h1 {
        color: #fff;
        text-align: center;
        margin-bottom: 20px;
    }

    .form-group {
        margin-bottom: 20px; /* Espacement entre chaque groupe de formulaire */
    }

 

    .form-control {
        margin-top: 4px;
        background-color: #333;
        border: 1px solid #555;
        color: #fff;
        padding: 10px;
        font-size: 16px;
        width: 100%; /* S'assurer que les inputs occupent toute la largeur */
    }

    .form-control:focus {
        border-color: #007bff;
        background-color: #444;
        outline: none;
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
        width: 100%;
        padding: 12px;
        font-size: 16px;
    }

    .btn-primary:hover {
        background-color: #0056b3;
        border-color: #004085;
    }

    .alert-danger {
        background-color: #e74c3c;
        color: white;
        padding: 10px;
        border-radius: 5px;
        margin-bottom: 20px;
    }
</style>
